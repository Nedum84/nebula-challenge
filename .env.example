# Environment Configuration
NODE_ENV=development
PORT=5500

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=90

# AWS Configuration
AWS_REGION=eu-north-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# AWS Cognito Configuration
COGNITO_USER_POOL_ID=your-cognito-user-pool-id
COGNITO_CLIENT_ID=your-cognito-client-id
COGNITO_CLIENT_SECRET=your-cognito-client-secret

# DynamoDB Configuration
DYNAMODB_LEADERBOARD_TABLE=leaderboard
DYNAMODB_LEADERBOARD_ARN=arn:aws:dynamodb:your-region:your-account:table/leaderboard

# WebSocket Configuration
WEBSOCKET_CONNECTION_URL=https://your-api-gateway.execute-api.your-region.amazonaws.com/production/@connections